<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main_1" >

    <include
        android:id="@+id/IncludeTitle"
        layout="@layout/top_titel" />

    <include
        android:id="@+id/IncludeBottom"
        layout="@layout/bottom_box" />

    <LinearLayout
        android:id="@+id/layMainBody"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/IncludeBottom"
        android:layout_below="@id/IncludeTitle"
        android:orientation="vertical" />

</RelativeLayout>